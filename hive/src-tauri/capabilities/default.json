{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-exists",
    "fs:allow-watch",
    {
      "identifier": "fs:scope",
      "allow": [
        "$HOME/**",
        "/**"
      ]
    },
    "store:default",
    "window-state:default",
    "shell:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "claude",
          "cmd": "claude",
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "claude",
          "cmd": "claude",
          "args": true
        }
      ]
    },
    "shell:allow-stdin-write",
    "shell:allow-kill",
    "dialog:default"
  ]
}
