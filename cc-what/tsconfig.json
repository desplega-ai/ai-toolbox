{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationDir": "./dist",
		"outDir": "./dist",
		"rootDir": "./src",
		"types": ["bun-types"],
		"lib": ["ESNext"],
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": false,
		"emitDeclarationOnly": false
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
