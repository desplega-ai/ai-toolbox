{
  "buildCommand": "bun run build",
  "installCommand": "bun install",
  "outputDirectory": "dist",
  "bunVersion": "1.x",
  "functions": {
    "api/*.ts": {
      "includeFiles": "lib/**"
    }
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/public/:path*", "destination": "/public/:path*" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
